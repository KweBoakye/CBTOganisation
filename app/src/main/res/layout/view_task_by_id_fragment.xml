<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tasks.presentation.viewtaskbyid.ViewTaskByID">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="257dp"
            android:layout_height="71dp"

            android:layout_marginStart="76dp"
            android:layout_marginEnd="8dp"

            android:elevation="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/titleCardView"
            app:layout_constraintEnd_toEndOf="@+id/titleCardView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titleCardView"
            app:layout_constraintVertical_bias="0.401" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/titleCardView"
            android:layout_width="342dp"
            android:layout_height="188dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="@dimen/card_high_elevation"
            app:cardMaxElevation="@dimen/card_high_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.149">


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="360dp"
            android:layout_height="560dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryDark"
            app:cardElevation="@dimen/card_low_elevation"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.087" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>