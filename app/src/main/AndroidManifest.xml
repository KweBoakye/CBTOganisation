<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fyp.kweku.cbtoganisation">

    <application
            android:name=".common.CBTOrganisationApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".tasks.presentation.viewtaskbyid.TaskActivity"
                android:label="@string/title_activity_task"
                android:theme="@style/AppTheme">
            <nav-graph android:value="@navigation/nav_graph" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".tasks.presentation.viewtasks.FragAct"
                android:exported="true">
        </activity>
        <activity
                android:name=".tasks.presentation.CreateNewTaskActivity"
                android:label="@string/title_activity_create_new_task"
                android:theme="@style/AppTheme.NoActionBar"
                android:exported="true">

        </activity>
    </application>

</manifest>